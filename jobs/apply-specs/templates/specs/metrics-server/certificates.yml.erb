<%- require 'base64' -%>
---
apiVersion: v1
kind: Secret
metadata:
  name: metrics-server-certs
  namespace: kube-system
type: Opaque
data:
  ca.crt: <%= Base64.strict_encode64(p('tls.metrics.ca')) %>
  apiserver.crt: <%= Base64.strict_encode64(p('tls.metrics.certificate')) %>
  apiserver.key: <%= Base64.strict_encode64(p('tls.metrics.private_key')) %>
