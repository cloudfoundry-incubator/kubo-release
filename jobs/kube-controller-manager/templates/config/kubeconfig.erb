apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority: "/var/vcap/jobs/kube-controller-manager/config/ca.pem"
    server: https://master.kubo:8443
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: kube-controller-manager
  name: kube-controller-manager
current-context: kube-controller-manager
users:
- name: kube-controller-manager
  user:
    token: <%= p("api-token") %>
