#!/bin/bash

set -euxo pipefail

for job in apply-specs cloud-provider flanneld kube-apiserver kube-controller-manager kube-proxy kube-scheduler kubelet kubernetes-api-route-registrar kubernetes-system-specs route-sync kubo-dns-aliases; do
  if [[ -d "/var/vcap/jobs/${job}" ]]; then
    chown root:vcap "/var/vcap/jobs/${job}"
    chmod 0750 "/var/vcap/jobs/${job}"
  fi
done
