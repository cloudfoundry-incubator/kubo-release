<%
  api_endpoints = link("kubernetes-api").instances.map do |instance|
    "http://#{instance.address}:8080/"
  end.join(',')
%>
apiVersion: v1
kind: Config
clusters:
- cluster:
    server: <%= api_endpoints %>
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
  name: kubelet
current-context: kubelet
