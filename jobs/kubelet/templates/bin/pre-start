#!/bin/bash -e

CONF_DIR=/var/vcap/jobs/kubelet/config

install_gluster() {
  add-apt-repository -y ppa:gluster/glusterfs-3.8
  apt-get update
  apt-get install -y glusterfs-client
}

shutdown_rpcbind_if_its_running() {
  /etc/init.d/rpcbind stop || echo Already stopped.
}

main() {
  install_gluster
  shutdown_rpcbind_if_its_running
}

main