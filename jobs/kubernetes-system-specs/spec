    description: The authorization mode for kubernetes-api. Should be 'abac' or 'rbac'
    default: rbac
  admin-username:
    description: The admin username for the Kubernetes cluster
  admin-password:
    description: The admin password for the Kubernetes cluster
  addons-spec:
