<% if p('authorization-mode').downcase == 'rbac' %>

apiVersion: v1
kind: ServiceAccount
metadata:
  name: heapster
  namespace: kube-system
---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: heapster
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: system:heapster
subjects:
- kind: ServiceAccount
  name: heapster
  namespace: kube-system
---
<% end %>

apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: heapster
  namespace: kube-system
spec:
  replicas: 1
  template:
    metadata:
      labels:
        task: monitoring
        k8s-app: heapster
    spec:
      serviceAccountName: heapster
      containers:
      - name: heapster
        image: k8s.gcr.io/heapster-amd64:v1.5.0
        imagePullPolicy: IfNotPresent
        command:
        - /heapster
        - --source=kubernetes:https://master.cfcr.internal:8443?useServiceAccount=true
        - --sink=influxdb:https://monitoring-influxdb:8086?secure=true
        - --tls_cert=/certs/heapster-cert
        - --tls_key=/certs/heapster-key
        - --tls_client_ca=/certs/ca
        - --vmodule=*=5
        volumeMounts:
        - mountPath: /certs
          name: heapster-certs
          readOnly: true
        - mountPath: /etc/ssl/certs/ca-certificates.crt
          name: kubo-ca
          readOnly: true
      volumes:
      - name: heapster-certs
        secret:
          secretName: heapster-certs
      - name: kubo-ca
        hostPath:
          path: "/var/vcap/jobs/kubelet/config/ca.pem"
      <% if p('authorization-mode').downcase == 'rbac' %>
      serviceAccountName: heapster
      <% end %>
---

apiVersion: v1
kind: Service
metadata:
  labels:
    task: monitoring
    # For use as a Cluster add-on (https://github.com/kubernetes/kubernetes/tree/master/cluster/addons)
    # If you are NOT using this as an addon, you should comment out this line.
    kubernetes.io/cluster-service: 'true'
    kubernetes.io/name: Heapster
  name: heapster
  namespace: kube-system
spec:
  ports:
  - port: 8443
    targetPort: 8082
  selector:
    k8s-app: heapster

